/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["src/app/pages/*"],
      "@containers/*": ["src/app/containers/*"],
      "@services/*": ["src/app/services/*"],
      "@assets/*": ["src/assets/*"],
      "@widgets/*": ["src/widgets/*"],
    },
    "resolveJsonModule": true,
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
